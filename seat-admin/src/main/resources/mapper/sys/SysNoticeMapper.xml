<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.chen.dao.SysNoticeDao">
    <!--共性代码定义-->
    <sql id="queryWhereId">
        from sys_notices
        <where>
            <if test="name!=null and name!=''">
                title like concat("%",#{name},"%")
            </if>
        </where>
    </sql>

    <!--统计总记录个数-->
    <select id="getRowCount" resultType="int">
        select count(*)
        <include refid="queryWhereId"/>
    </select>

    <!--分页查询当前页记录-->
    <select id="findPageObjects" resultType="com.chen.pojo.SysNotice">
        select *
        <include refid="queryWhereId"/>
        order by createdTime desc
        limit #{startIndex},#{pageSize}
    </select>


    <!--useGeneratedKeys 表示使用自增的主键值-->
    <!--keyProperty 把自增的主键值(id)赋值给SysRole这个属性-->
    <insert id="insertObject" parameterType="com.chen.pojo.SysNotice" keyProperty="id" useGeneratedKeys="true">
        insert into sys_notices
            (title, content, createdTime, modifiedTime, createdUser)
        values (#{title}, #{content}, now(), now(), #{createdUser})
    </insert>

