<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.chen.dao.SysSeatDao">

    <!--基于条件查询总记录数-->
    <select id="findObjects" resultType="com.chen.pojo.SysSeat">
        select c.*, p.name parentName
        from sys_seats c
                 left join sys_seats p
                           on c.parentId = p.id
    </select>

    <insert id="insertObject" parameterType="com.chen.pojo.SysSeat">
        insert into sys_seats
        (name, parentId, state, createdTime, modifiedTime, createdUser, modifiedUser)
        values (#{name}, #{parentId}, #{state}, now(), now(), #{createdUser}, #{modifiedUser})
    </insert>

    <update id="updateObject" parameterType="com.chen.pojo.SysSeat">
        update sys_seats
        set name=#{name},
            parentId=#{parentId},
            state=#{state},
            modifiedTime=now(),
            modifiedUser=#{modifiedUser}
        where id = #{id}
    </update>


